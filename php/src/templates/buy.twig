<form action="{{ app.request.baseUrl ~ '/buy' }}" method="post" class="form-horizontal" enctype="multipart/form-data">
  <div class="control-group">
    <p>You are going to order the {{ Desc }} for ${{ Price }}.  How many would you like?<p>
    <label class="control-label" for="Quantity">Quantity</label>
    <div class="controls">
      <input type="hidden" name="Item" id="Item" class="input" maxlength="63" value="{{ Item }}">
      <input type="hidden" name="Category" id="Category" class="input" maxlength="63" value="{{ Category }}">
      <input type="hidden" name="Price" id="Price" class="input" maxlength="63" value="{{ Price }}">
      <input type="text" name="Quantity" id="Quantity" class="input" maxlength="63" value="1">
    </div>
    <p>Do you have a coupon code?<p>
    <label class="control-label" for="Ad">Coupon</label>
    <div class="controls">
      <input type="text" name="Ad" id="Ad" class="input" maxlength="63" value="">
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <button type="submit" class="btn btn-primary"><b class="icon-ok icon-white"></b>Place Order</button>
      <a href="{{ app.request.baseUrl ~ '/' }}" class="btn"><b class="icon-chevron-left"></b> Go Back</a>
    </div>
  </div>
</form>

